<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/scrollView"
    android:layout_alignParentStart="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/detectedValue"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="Undetected" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/patternValue"
            android:padding="5dp"
            android:layout_below="@+id/detectedValue"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="X-Acceleration"
            android:id="@+id/graphXAccelTitle"
            android:padding="5dp"
            android:layout_below="@+id/patternValue"
            android:layout_alignParentStart="true" />

        <com.jjoe64.graphview.GraphView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/graphXAccel"
            android:layout_below="@+id/graphXAccelTitle"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Y-Acceleration"
            android:id="@+id/graphYAccelTitle"
            android:layout_below="@+id/graphXAccel"
            android:layout_alignParentStart="true"
            android:padding="5dp" />

        <com.jjoe64.graphview.GraphView
            android:layout_width="match_parent"
            android:layout_height="200dip"
            android:id="@+id/graphYAccel"
            android:layout_below="@+id/graphYAccelTitle"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Z-Acceleration"
            android:id="@+id/graphZAccelTitle"
            android:layout_below="@+id/graphYAccel"
            android:layout_alignParentStart="true"
            android:padding="5dp" />

        <com.jjoe64.graphview.GraphView
            android:layout_width="match_parent"
            android:layout_height="200dip"
            android:id="@+id/graphZAccel"
            android:layout_below="@+id/graphZAccelTitle"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Temperature"
            android:id="@+id/graphTempTitle"
            android:layout_below="@+id/graphZAccel"
            android:layout_alignParentStart="true"
            android:padding="5dp" />

        <com.jjoe64.graphview.GraphView
            android:layout_width="match_parent"
            android:layout_height="200dip"
            android:id="@+id/graphTemp"
            android:layout_below="@+id/graphTempTitle"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Signal Strength"
            android:id="@+id/graphSignalTitle"
            android:layout_below="@+id/graphTemp"
            android:layout_alignParentStart="true"
            android:padding="5dp" />

        <com.jjoe64.graphview.GraphView
            android:layout_width="match_parent"
            android:layout_height="200dip"
            android:id="@+id/graphSignal"
            android:layout_below="@+id/graphSignalTitle"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

    </RelativeLayout>

</ScrollView>